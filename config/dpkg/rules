#!/usr/bin/make -f

%:
	dh $@ --buildsystem=pybuild --with=python3

.PHONY: override_dh_auto_test
override_dh_auto_test:

.PHONY: override_dh_auto_install
override_dh_auto_install:
	dh_auto_install
	mkdir -p ${PWD}/debian/plaso-data/usr/share/plaso/
	mv ${PWD}/debian/python3-plaso/usr/lib/python*/site-packages/plaso/data/* ${PWD}/debian/plaso-data/usr/share/plaso/
	rmdir ${PWD}/debian/python3-plaso/usr/lib/python*/site-packages/plaso/data
	for FILENAME in ${PWD}/debian/plaso-tools/usr/bin/*; do mv ${FILENAME} ${FILENAME}.py; done

