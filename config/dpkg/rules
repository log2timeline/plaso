#!/usr/bin/make -f

%:
	dh $@ --buildsystem=python_distutils --with=python2,python3

.PHONY: override_dh_auto_clean
override_dh_auto_clean:
	dh_auto_clean
	rm -rf build plaso.egg-info/SOURCES.txt plaso.egg-info/PKG-INFO

.PHONY: override_dh_auto_build
override_dh_auto_build:
	dh_auto_build
	set -ex; for python in $(shell py3versions -r); do \
		$$python setup.py build; \
	done;

.PHONY: override_dh_auto_install
override_dh_auto_install:
	dh_auto_install --destdir $(CURDIR)
	set -ex; for python in $(shell py3versions -r); do \
		$$python setup.py install --root=$(CURDIR) --install-layout=deb; \
	done;

.PHONY: override_dh_python3
override_dh_python3:
	dh_python3 -p plaso-tools --shebang=/usr/bin/python3
